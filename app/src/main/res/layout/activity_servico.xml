<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fundolocalizacao"
    tools:context=".activity.Servico">

    <include android:id="@+id/toolbar_principal"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="605dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtBarba"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkBarba"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:onClick="recuperaValor"
                android:text="@string/valBarba"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtCorte"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkCorte"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:onClick="recuperaValor"
                android:text="@string/valCorte"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtCorBar"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkCorBar"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:onClick="recuperaValor"
                android:text="@string/valCorEBarba"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtCorRela"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkCorRelax"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:onClick="recuperaValor"
                android:text="@string/valCorERela"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtCorProg"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkCorProg"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:checked="false"
                android:onClick="recuperaValor"
                android:text="@string/valCorEProg"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtsobrancelha"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkSobrancelha"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:onClick="recuperaValor"
                android:text="@string/valSobrancelha"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtlimpezafacial"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkLimpeza"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:onClick="recuperaValor"
                android:text="@string/valLimpeza"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtpezinho"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkpezinho"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:onClick="recuperaValor"
                android:text="@string/valPezinho"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtCorteinfantil"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkcorteinfantil"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:onClick="recuperaValor"
                android:text="@string/valCorteInfantil"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtLuzes"
                android:textColor="@color/colorAccent" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo"
                android:textColor="@color/colorAccent" />

            <CheckBox
                android:id="@+id/checkLuzes"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:buttonTint="@color/colorAccent"
                android:onClick="recuperaValor"
                android:text="@string/valLuzes"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/designbranco"
            android:text="@string/back"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:text="@string/txtSimbolo"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/txtValor"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textValor"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btnConfimar"
            android:layout_width="169dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@mipmap/designbranco"
            android:text="CONFIRMAR"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>