<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fundo"
    tools:context=".activity.Servico">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="405dp"
        android:layout_height="409dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtBarba" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/radioBarba"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:text="@string/textValor" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtCorte" />

            <TextView
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/radioCorte"
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:text="@string/textValor" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtCorBar" />

            <TextView
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/radioCorBar"
                    android:layout_width="81dp"
                    android:layout_height="match_parent"
                    android:text="@string/textValor" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtCorRela" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/radioCorRela"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textValor" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtCorProg" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/radioCorPro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/textValor" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtHidratacao" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSimbolo" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/radioHidratacao"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:text="@string/textValor" />
            </RadioGroup>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="399dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/btnvoltar" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:text="@string/txtSimbolo" />

        <TextView
            android:id="@+id/txtValor"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textValor" />

        <Button
            android:id="@+id/btnConfimar"
            android:layout_width="169dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@mipmap/btnconfirmar" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>