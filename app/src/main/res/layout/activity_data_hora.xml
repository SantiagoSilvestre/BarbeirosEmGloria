<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fundohorario"
    tools:context=".activity.DataHora">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="152dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/calendarView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="155dp">

            <Button
                android:id="@+id/btnBarbeiro"
                android:layout_width="185dp"
                android:layout_height="63dp"
                android:background="@mipmap/designbranco"
                android:text="BARBEIRO"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="81dp" />

            <Button
                android:id="@+id/btnServico"
                android:layout_width="185dp"
                android:layout_height="63dp"
                android:background="@mipmap/designbranco"
                android:text="SERVIÃ‡O"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="203dp"
                tools:layout_editor_absoluteY="81dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="390dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="726dp">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/designbranco"
            android:text="VOLTAR"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R$"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/txtValor"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textValor"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btnConfimar"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/designbranco"
            android:text="CONFIRMAR"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="391dp"
        android:layout_height="310dp"
        android:background="@color/colorAccent"
        android:scrollbarThumbHorizontal="@color/colorAccent"
        android:scrollbarThumbVertical="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>