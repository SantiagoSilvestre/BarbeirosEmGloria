<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fundohorario"
    tools:context=".activity.DataHora">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:id="@+id/linearLayoutServ"
            android:layout_width="397dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="186dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp">

            <Button
                android:id="@+id/btnBarbeiro"
                android:layout_width="185dp"
                android:layout_height="63dp"
                android:background="@mipmap/designbranco"
                android:text="BARBEIRO"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="81dp" />

            <Button
                android:id="@+id/btnServico"
                android:layout_width="185dp"
                android:layout_height="63dp"
                android:background="@mipmap/designbranco"
                android:text="SERVIÇO"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="203dp"
                tools:layout_editor_absoluteY="81dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="47dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="726dp">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="87dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/designbranco"
                android:text="VOLTAR"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R$"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/textValor"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btnConfimar"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:background="@mipmap/designbranco"
                android:text="CONFIRMAR"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

        <TextView
            android:id="@+id/displayDate"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_above="@+id/btnData"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="9dp"
            android:text="Escolha uma data"
            android:textColor="#FFF"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnData"
            android:drawableLeft="@android:drawable/ic_menu_my_calendar"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_marginBottom="147dp"
            android:text="Data" />

        <TextView
            android:id="@+id/tvHorarioEntrada"
            android:layout_width="180dp"
            android:layout_height="43dp"
            android:layout_above="@+id/btnHorarioEntrada"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="13dp"
            android:ems="10"
            android:text="Escolha um horário"
            android:textColor="#FFF"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnHorario"
            android:layout_width="179dp"
            android:layout_height="73dp"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="127dp"
            android:text="Escolha um horário"
            android:textColor="#000" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>