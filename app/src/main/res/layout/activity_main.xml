<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fundohome"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="356dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnData"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@mipmap/btnhorario"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/btnBarbeiro"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@mipmap/btnbarbeiro"
                tools:layout_editor_absoluteX="119dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/btnServico"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@mipmap/btnservico"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/btnlocalizacao"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@mipmap/btnlocalizacao"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="138dp" />

            <Button
                android:id="@+id/btnpromocoes"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@mipmap/btnpromocoes"
                tools:layout_editor_absoluteX="119dp"
                tools:layout_editor_absoluteY="138dp" />

            <Button
                android:id="@+id/btncredito"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@mipmap/btncredito"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="138dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Necessário cartão fidelidade, solicite o seu na barbearia"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="324dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/promocaoicon"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="283dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="208dp"
        android:layout_height="24dp"
        android:text="PROMOÇÃO DO ANO"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10º Corte gratuito*"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="319dp" />

</androidx.constraintlayout.widget.ConstraintLayout>